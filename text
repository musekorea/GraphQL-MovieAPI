import { createServer } from "@graphql-yoga/node";

const familyData = [
	{ id: 1, name: "moya", age: 4 },
	{ id: 2, name: "baozi", age: 5 },
	{ id: 3, name: "nicai", age: 8 },
];

const typeDefs = `
	type Family {
		id : Int!
		name : String!
		age : Int!
	}
	type Query {
		family : [Family]
	}	
`;

const server = createServer({
	schema: {
		typeDefs: typeDefs,
		resolvers: {
			Query: {
				family: () => familyData,
			},
		},
	},
});

server.start();
